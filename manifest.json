{
    "manifest_version": 3,
    "name": "darkMode",
    "version": "1.0",
    "description": "simple darkMode for chrome",
    "permissions": ["activeTab", "storage", "tabs", "scripting"],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"],
            "run_at": "document_end"
        }
    ]

}